# Environment Configuration Template
# Copy this file to .env and configure your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Sistema de Ponto API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=sistema_ponto_db
DB_USERNAME=postgres
DB_PASSWORD=password

# Test Database (usado pelos testes)
DB_TEST_CONNECTION=pgsql
DB_TEST_HOST=postgres_test
DB_TEST_PORT=5432
DB_TEST_DATABASE=sistema_ponto_test
DB_TEST_USERNAME=postgres
DB_TEST_PASSWORD=password

# =============================================================================
# CACHE & SESSION
# =============================================================================
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-secret-key-here
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# API RATE LIMITING
# =============================================================================
API_RATE_LIMIT=60
API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# SECURITY
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1
TRUSTED_PROXIES=

# =============================================================================
# PUSHER/WEBSOCKETS (Se necess√°rio)
# =============================================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"